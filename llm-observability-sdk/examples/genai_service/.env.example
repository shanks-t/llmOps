# Google API Key (required)
GOOGLE_API_KEY=your-google-api-key

# Service identification
SERVICE_NAME=fastapi-genai-service
DEPLOYMENT_ENV=local

# OTLP exporter (Jaeger/Tempo)
OTEL_ENABLED=true
OTEL_ENDPOINT=http://localhost:4318/v1/traces

# Phoenix/Arize AX exporter (GenAI traces only)
# Mode: "phoenix" (open source), "ax" (enterprise), or "disabled"
ARIZE_MODE=phoenix
ARIZE_ENDPOINT=http://localhost:6006/v1/traces

# For Arize AX (enterprise) only - uncomment and configure:
# ARIZE_MODE=ax
# ARIZE_ENDPOINT=https://your-ax-cluster.example.com/v1
# ARIZE_API_KEY=your-api-key
# ARIZE_SPACE_ID=your-space-id

# Debug: print spans to console
OTEL_CONSOLE_DEBUG=false

# GCS configuration for medical records pipeline
GCS_PROJECT_ID=llmops-genai
GCS_BUCKET_NAME=patient-records-genai
GCS_RAW_PREFIX=raw
GCS_SUMMARIES_PREFIX=summaries
GCS_INDEX_FILE=index.json
